{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard",
        "react-app",
        "plugin:react/recommended",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "settings": {
        "import/resolver": {
            "node": {
                "extensions": [
                    ".js",
                    ".jsx",
                    ".ts",
                    ".tsx"
                ]
            }
        }
    },
    "rules": {
        "space-before-function-paren": ["error", "never"],
        "@typescript-eslint/indent": [
            "error",
            2
        ],
        "@typescript-eslint/prefer-interface": "off",
        "react/jsx-filename-extension": [
            "error",
            {
                "extensions": [
                    ".jsx",
                    ".tsx"
                ]
            }
        ],
        "react/prop-types": "off",
        "spaced-comment": [
            "error",
            "always",
            {
                "markers": [
                    "/ <reference"
                ]
            }
        ]
    }
}